mixin post(height, size, option)
  .post&attributes(attributes)
    .row.margin
      .col-12.col-lg-5.padding.post__top
        .post__link
          img(height=height src="https://ld-wp73.template-help.com/wordpress/prod_18248/v1/wp-content/uploads/2018/03/thumb-sport-"+ Math.floor(Math.random() * (20 - 1) + 1) +".jpg").post__img
          .post__overlay
            a.post__node(title='Title' href='#' target='_parent')
              i.fa.fa-link
            a.post__node(title='Title' href='#')
              i.fa.fa-search

      .col-12.col-lg-7.padding.post__center

        if size === 'lg'
          .post__block
            a(href="#").post__category
              i(aria-hidden="true").fas.fa-folder-open.post__icon
              span Featured News

        .post__block
          a(href="#").post__title
            h4.h4 As More Japanese Take up Bodybuilding, a Veteran Chases a Championship

        if option
          .post__block
            a(href="#").post__user
              i(aria-hidden="true").far.fa-user.post__icon
              span User
            a(href="#").post__data
              i(aria-hidden="true").far.fa-clock.post__icon
              span 11 June 2020

        .post__block
          p.post__text Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aspernatur ea eos ex nostrum numquam placeat voluptatibus? Aliquid amet aperiam cupiditate debitis eveniet libero mollitia, nulla officiis quae temporibus veritatis vero!

        if size === 'lg'
          .post__block
            +button('read more').button--primary

        if size === 'sm'
          .post__block
            a(href="#").post__category
              i(aria-hidden="true").far.fa-file-alt.post__icon
              span Read More
